# BalmSharedMCP Environment Configuration

# Server Configuration
NODE_ENV=development
LOG_LEVEL=info
MCP_MODE=stdio
MCP_PORT=3000
MCP_HOST=localhost

# Shared Library Configuration
SHARED_LIBRARY_PATH=/path/to/shared-library
SHARED_LIBRARY_NAME=my-shared
SHARED_LIBRARY_VERSION=latest

# Feature Flags
ENABLE_CODE_GENERATION=true
ENABLE_PROJECT_ANALYSIS=true
ENABLE_RESOURCE_QUERY=true
ENABLE_TEMPLATE_GENERATION=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=512

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Security Configuration
ENABLE_CORS=false
ALLOWED_ORIGINS=

# Logging Configuration
LOG_FORMAT=text
LOG_FILE=

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_CONTAINER_NAME=balm-shared-mcp