{
  "name": "balm-shared-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for balm-shared library integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "prepare": "husky install",
    "build": "node scripts/build.js",
    "publish:dry": "node scripts/publish.js --dry-run",
    "publish:patch": "node scripts/publish.js",
    "publish:minor": "node scripts/version.js bump minor && node scripts/publish.js",
    "publish:major": "node scripts/version.js bump major && node scripts/publish.js",
    "version:bump": "node scripts/version.js bump",
    "version:current": "node scripts/version.js current",
    "docker:build": "docker build -t balm-shared-mcp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy": "./scripts/deploy.sh",
    "check-updates": "node scripts/check-updates.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "balm-shared-mcp",
    "vue",
    "balm-ui",
    "code-generation"
  ],
  "author": "Balm应用研发部",
  "license": "MIT",
  "bin": {
    "balm-shared-mcp": "./src/cli/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "globals": "^14.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "vitest": "^1.3.0",
    "@vitest/coverage-v8": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}